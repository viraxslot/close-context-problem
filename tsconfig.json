{
    "compilerOptions": {
        "target": "ES2018",
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "*": ["./*"]
        },
        "types": ["node", "@types/mocha", "@types/chai"],
        "typeRoots": ["node_modules/@types"],
        "noEmit": true
    },
    "include": ["./src/**/*.ts", "./test/**/*.ts", "./test-data/**/*.ts", "./translations/**/*.ts"],
    "exclude": ["./node_modules"]
}
